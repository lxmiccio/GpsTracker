<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gpstracker.GoogleMapsFragment">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/start_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="17dp"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_record" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="68dp"
        android:layout_marginBottom="17dp"
        android:visibility="invisible"
        app:backgroundTint="@color/colorPrimary"
        app:srcCompat="@drawable/ic_stop_recording" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/center_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="136dp"
        android:layout_marginBottom="17dp"
        android:src="@drawable/ic_my_position"
        app:backgroundTint="@color/colorPrimary" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/overlay"
            android:layout_width="173dp"
            android:layout_height="108dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/ic_overlay" />

        <TextView
            android:id="@+id/latitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:text="@string/latitude"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/latitude_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/latitude_label"
            android:elevation="10dp"
            android:text="@string/latitude"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/longitude_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:text="@string/longitude"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/longitude_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/longitude_label"
            android:elevation="10dp"
            android:text="@string/longitude"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/distance_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:text="@string/distance"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/distance_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="50dp"
            android:layout_toEndOf="@+id/distance_label"
            android:elevation="10dp"
            android:text="@string/distance"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/speed_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="70dp"
            android:elevation="10dp"
            android:text="@string/speed"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/speed_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="70dp"
            android:layout_toEndOf="@+id/speed_label"
            android:elevation="10dp"
            android:text="@string/speed"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/chronometer_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="90dp"
            android:elevation="10dp"
            android:text="@string/time"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/chronometer_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="90dp"
            android:layout_toEndOf="@+id/speed_label"
            android:elevation="10dp"
            android:text="@string/time"
            android:textColor="@color/colorLightGrey" />

    </RelativeLayout>

</FrameLayout>