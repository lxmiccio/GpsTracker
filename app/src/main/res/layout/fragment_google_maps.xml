<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.gpstracker.GoogleMapsFragment">

    <fragment
        android:id="@+id/map"
        class="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/start_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="17dp"
        android:clickable="true"
        app:backgroundTint="?attr/colorPrimaryDark"
        app:srcCompat="@drawable/ic_record" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/stop_recording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="68dp"
        android:layout_marginBottom="17dp"
        android:clickable="true"
        android:visibility="invisible"
        app:backgroundTint="?attr/colorPrimaryDark"
        app:srcCompat="@drawable/ic_stop_recording" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/center_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="136dp"
        android:layout_marginBottom="17dp"
        android:clickable="true"
        android:src="@drawable/ic_my_position"
        app:backgroundTint="?attr/colorPrimaryDark" />

    <RelativeLayout
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible">

        <ImageView
            android:id="@+id/overlay"
            android:layout_width="173dp"
            android:layout_height="90dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:scaleType="fitXY"
            android:src="@drawable/round60" />

        <TextView
            android:id="@+id/latitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="10dp"
            android:elevation="10dp"
            android:text="Latitudine: "
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/longitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:elevation="10dp"
            android:text="Longitudine: 12.3106409"
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/speed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="50dp"
            android:elevation="10dp"
            android:text="VelocitÃ : "
            android:textColor="@color/colorLightGrey" />

        <TextView
            android:id="@+id/chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="70dp"
            android:elevation="10dp"
            android:text="Tempo: "
            android:textColor="@color/colorLightGrey" />
    </RelativeLayout>

</FrameLayout>