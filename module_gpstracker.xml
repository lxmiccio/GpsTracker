<?xml version="1.0" encoding="UTF-8"?>
<project name="module_gpstracker" default="compile.module.gpstracker">
  <dirname property="module.gpstracker.basedir" file="${ant.file.module_gpstracker}"/>
  
  <property name="module.jdk.home.gpstracker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.gpstracker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.gpstracker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.gpstracker" value="-encoding UTF-8 -source 1.7 -target 1.7 ${compiler.args}"/>
  
  <property name="gpstracker.output.dir" value="${module.gpstracker.basedir}/build/classes/production/GpsTracker"/>
  <property name="gpstracker.testoutput.dir" value="${module.gpstracker.basedir}/build/classes/test/GpsTracker"/>
  
  <path id="gpstracker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="gpstracker.module.production.classpath">
    <path refid="${module.jdk.classpath.gpstracker}"/>
  </path>
  
  <path id="gpstracker.runtime.production.module.classpath">
    <pathelement location="${gpstracker.output.dir}"/>
  </path>
  
  <path id="gpstracker.module.classpath">
    <path refid="${module.jdk.classpath.gpstracker}"/>
    <pathelement location="${gpstracker.output.dir}"/>
  </path>
  
  <path id="gpstracker.runtime.module.classpath">
    <pathelement location="${gpstracker.testoutput.dir}"/>
    <pathelement location="${gpstracker.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.gpstracker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.gpstracker">
    <patternset refid="excluded.from.module.gpstracker"/>
  </patternset>
  
  
  <target name="compile.module.gpstracker" depends="compile.module.gpstracker.production,compile.module.gpstracker.tests" description="Compile module GpsTracker"/>
  
  <target name="compile.module.gpstracker.production" depends="register.custom.compilers" description="Compile module GpsTracker; production classes"/>
  
  <target name="compile.module.gpstracker.tests" depends="register.custom.compilers,compile.module.gpstracker.production" description="compile module GpsTracker; test classes" unless="skip.tests"/>
  
  <target name="clean.module.gpstracker" description="cleanup module">
    <delete dir="${gpstracker.output.dir}"/>
    <delete dir="${gpstracker.testoutput.dir}"/>
  </target>
</project>